{
    "name": "jengo/schema",
    "description": "A schema package for CodeIgniter 4 applications.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jengo\\Schema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Support\\": "tests/_support/"
        }
    },
    "authors": [
        {
            "name": "Ian Ochieng",
            "email": "ochiengian383@gmail.com"
        }
    ],
    "require-dev": {
        "codeigniter4/devkit": "^1.3",
        "phpunit/phpunit": "^11.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff"
    },
    "require": {
        "codeigniter4/framework": "^4.6"
    }
}
